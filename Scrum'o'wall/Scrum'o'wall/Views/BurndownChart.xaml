<Window x:Class="Scrum_o_wall.Views.BurndownChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scrum_o_wall.Views"
        mc:Ignorable="d"
        Title="Scrum'o'Wall" Height="450" Width="800" WindowState="Maximized" WindowStyle="None" WindowStartupLocation="CenterScreen" FontSize="16" ResizeMode="NoResize">
    <Window.ContextMenu >
        <ContextMenu >

            <Separator/>
            <MenuItem Header="Quitter" Name="Quit" Click="Quit_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <Line x:Name="lnIdeal" X1="120" Y1="70" StrokeThickness="2" X2="730" Y2="380" Stroke="Red"></Line>
        <Polyline x:Name="lnCurrent" Points="120,70,200,70,200,300,700,300,700,350" StrokeThickness="2" Stroke="Black">
            
        </Polyline>
        <Border BorderBrush="Gray" BorderThickness="2,0,0,2" Margin="120,70,70,70"/>
        <Label Content="Complexité" VerticalAlignment="Center"></Label>
        <Label Content="Jour" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"></Label>
        <Label VerticalAlignment="Bottom" Margin="120,0,0,40" Name="lblDayBegin">DD.MM</Label>
        <Label VerticalAlignment="Bottom" Margin="0,0,70,40" HorizontalAlignment="Right" Name="lblDayEnd">DD.MM</Label>
        
        <Label VerticalAlignment="Top"    Margin="90,60,0,0"  HorizontalAlignment="Left" Name="lblComplexityMax"> XX</Label>
        <Label VerticalAlignment="Bottom" Margin="100,0,0,60"    HorizontalAlignment="Left" Name="lblComplexityZero">0</Label>
        
        <Button x:Name="btnCancel" Click="btnCancel_Click" TouchDown="btnCancel_TouchDown" Content="Retour" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="25" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
