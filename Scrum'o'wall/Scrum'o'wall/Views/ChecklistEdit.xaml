<Window x:Class="Scrum_o_wall.Views.ChecklistEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scrum_o_wall.Views"
        mc:Ignorable="d"
        Title="Modifier une checklist" Height="450" Width="447.5" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"></RowDefinition>
            <RowDefinition Height="40*"></RowDefinition>
            <RowDefinition Height="269*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"></ColumnDefinition>
            <ColumnDefinition Width="321*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="10,21" TextAlignment="Center" FontSize="20" >Modifier une checklist</TextBlock>
        <TextBlock Grid.Row="1" VerticalAlignment="Center" Margin="10,12" TextAlignment="Right" >Nom :</TextBlock>
        <TextBlock Grid.Row="2" VerticalAlignment="Top" Margin="10,10,10,0" TextAlignment="Right" >Objets :</TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="10" Name="tbxName"></TextBox>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="229*"></RowDefinition>
                <RowDefinition Height="50*"></RowDefinition>
            </Grid.RowDefinitions>
            <ListView x:Name="listItems" Margin="10">
            </ListView>
            <Button x:Name="btnAddItem" Grid.Row="1" Margin="10" TouchDown="btnAddItem_TouchDown" Click="btnAddItem_Click">Ajouter un objet</Button>
        </Grid>

        <Button x:Name="btnCancel" Grid.Row="3" Margin="10" Click="btnCancel_Click" TouchDown="btnCancel_TouchDown">Annuler</Button>
        <Button x:Name="btnConfirm" Grid.Row="3" Grid.Column="1" Margin="10" Click="btnConfirm_Click" TouchDown="btnConfirm_TouchDown">Confirmer</Button>
    </Grid>
</Window>
